{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/telegram-webhook.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    {
      "src": "/api/telegram-webhook",
      "dest": "/api/telegram-webhook.ts"
    },
    {
      "src": "/png/(.*)",
      "dest": "/png/$1"
    },
    {
      "src": "/teachers/(.*)",
      "dest": "/teachers/$1"
    },
    {
      "src": "/maktab/(.*)",
      "dest": "/maktab/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}

